<% if user_signed_in? %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a><%= image_tag "elephant.jpg", class:"nav navbar-brand nav-override" %></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav nav-override">
          <li> <%= link_to "+New Trumpet", new_tweet_path, class:"btn btn-default twitter-button" %></li>
          <li> <%= link_to "Twitter Feed", root_path, class:"btn btn-default" %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar.exists? %>
              <%= image_tag current_user.avatar.url, class: "nav nav-avatar img-rounded img-responsive"%>
            <% else %>
              <%= image_tag "avatar_placeholder.jpg", class: "nav nav-avatar img-rounded img-responsive"%>
            <% end %>
            <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li> <%= link_to current_user.name, profile_path(current_user.id) %></li>
              <li role="separator" class="divider"></li>
              <li> <%= link_to "Sign Out", destroy_user_session_path, method: :delete  %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% end %>
