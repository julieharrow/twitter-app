<p id="notice"><%= notice %></p>
<!-- # the above is just a necessary line in order to display any "completion" or "error" notice text as build in the controllers -->

<div class="profile-header">
  <div class="jumbotron">
    <div class = "col-md-4">
      <% if @user.avatar.exists? %>
        <%= image_tag @user.avatar.url, class:"img-rounded img-responsive avatar-profile"%>
      <% else %>
        <%= image_tag "avatar_placeholder.jpg", class:"img-rounded img-responsive avatar-profile"%>
      <% end %>
    </div>
    <% if @user==current_user %>
      <%= link_to "Edit Profile", edit_user_registration_path, class:"btn btn-default pull-right" %>
    <% elsif current_user != @user && !current_user.friends.include?(@user)  %>
      <%= link_to "Follow #{@user.username}", relationships_path(friend_id: @user), method: :post, class:"btn btn-default follow-button username-text pull-right" %>
    <% elsif current_user != @user && current_user.friends.include?(@user) %>
      <%= link_to "Unfollow #{@user.username}", relationship_path(current_user.relationships.find_by_friend_id(@user)), method: :delete, class:"btn btn-default follow-button username-text pull-right" %>
    <% end %>
    <br /><br />

    <h4 class="list-group-item-heading"><%= @user.name.titleize %> <br /><span class = "username-text"><%= @user.username.downcase %></span><br /><br /><span class = "timestamp-text"><%= @user.created_at.strftime("Joined %m/%d/%Y") %></span></h4>
  </div>
</div>
<div class="jumbotron profile-banner">
  <div class = "col-md-4">
  </div>
  <div class = "col-md-2">
    <h4>Following: <%= @user.relationships.size %></h4>
  </div>
  <div class = "col-md-2">
    <h4>Tweets: <%= @user.tweets.size %></h4>
  </div>
  <div class = "col-md-2">
    <h4>Followers: <%= @user.relationships.where(find_by_friend==@user).size %></h4>
    user.followers(order: 'updated_at DESC').select{|f| f.user.present? }.count
  </div>
</div>


<div container>
  <div class="col-md-3">
  </div>
  <div class="col-md-8">
    <% @user.tweets.each do |tweet| %>
      <div class="list-group">
        <a href=<%= tweet_path(tweet) %> class="list-group-item">

              <h4 class="list-group-item-heading"><%= tweet.user.name %> <span class = "username-text"><%= tweet.user.username %></span></h4>
              <p class="list-group-item-text">
              <%= tweet.message %>
              <% if tweet.pic.exists? %>
                 <br /><br /><%= image_tag tweet.pic.url, class:"img-responsive img-rounded"%>
              <% end %>
              </p>

        </a>
      </div>
    <% end %>
  </div>
</div>
